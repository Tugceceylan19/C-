        public void hesap(string op)
        {
            if (Alan.Text != "")
            {
                if (!sayi1aktif)
                {
                    sayi1 = Convert.ToInt32(Alan.Text);
                    oparetor = op;
                    sayi1aktif = true;
                    oparetorAktif = true;
                    Alan.Text += op;
                }
                else if (oparetorAktif && sayi2start)
                {
                    int sonuc = 0;
                    string[] sayilar = Alan.Text.Split(oparetor);
                    if (sayilar.Length > 0)
                    {
                        sayi2 = Convert.ToInt32(sayilar[1]);
                        if (oparetor == "+")
                        {
                            sonuc = sayi1 + sayi2;
                        }
                        else if (oparetor == "-")
                        {
                            sonuc = sayi1 - sayi2;
                        }
                        else if (oparetor == "*")
                        {
                            sonuc = sayi1 * sayi2;
                        }
                        else if (oparetor == "/")
                        {
                            sonuc = sayi1 / sayi2;
                        }
                        sayi1 = sonuc;
                        sayi2aktif = false;
                        sayi2start = false;
                        oparetor = op;
                        sayi2 = 0;
                        Alan.Text = sayi1 + op;

                    }
                }
                else if (oparetorAktif && !sayi2aktif && !sayi2start)
                {
                    oparetor = op;
                    Alan.Text = Alan.Text.Substring(0, Alan.Text.Length - 1);
                    Alan.Text += op;
                }
                else
                {
                    oparetor = op;
                    sayi1aktif = true;
                    oparetorAktif = true;
                    Alan.Text += oparetor;
                }
            }
        }
        private void button11_Click(object sender, EventArgs e)
